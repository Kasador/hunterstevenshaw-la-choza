  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./api",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["api/**/*.ts", "index.ts"]
}